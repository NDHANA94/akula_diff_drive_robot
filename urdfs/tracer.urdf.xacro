<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="tracer">
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
    <!-- links -->
    <xacro:include filename="$(find tracer_ign_sim)/urdfs/tracer_links.xacro" />
    <!-- joints -->
    <xacro:include filename="$(find tracer_ign_sim)/urdfs/tracer_joints.xacro" />
    

    <!-- ros2 control -->
    <xacro:include filename="$(find tracer_ign_sim)/urdfs/ros2_control.xacro"/>

    

    <!-- gazebo -->
    <xacro:include filename="$(find tracer_ign_sim)/urdfs/gazebo.xacro"/>

    <!-- lidar -->
    <xacro:include filename="$(find tracer_ign_sim)/urdfs/lidar.xacro"/>

    <!-- imu -->
    <xacro:include filename="$(find tracer_ign_sim)/urdfs/imu.xacro"/>


</robot>